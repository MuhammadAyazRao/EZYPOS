                        <MenuItem Header="_Customer Receipt Report"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_Customer Leadger Report" Click="CustomerLedgerReport_Click"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />                      
                    </MenuItem>
                    <MenuItem Header="_Supplier Report" Template="{StaticResource VsMenuSub}">
                        <MenuItem Header="_Supplier List with Balance"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_Supplier Payment Report"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_Supplier Leadger Report" Click="SupplierLedgerReport_Click"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
