                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Utilities" Template="{StaticResource VsMenuTop}">                  
                        <MenuItem Header="_Barcode" Name="Barcode" Click="Barcode_Click"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />                    
