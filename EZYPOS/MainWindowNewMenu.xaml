                        <MenuItem Header="_Purchase Orders" Name="PurchaseOrder" Click="PurchaseOrder_Click"  Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_bug.png" />
                    </MenuItem>                    
                </MenuItem>
                <MenuItem Header="_Reports" Template="{StaticResource VsMenuTop}">      
