                    <MenuItem Header="_Employee" Name="Employee" Click="Employee_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_bug.png" />
                    <MenuItem Header="_ExpenceHead" Name="Expence" Click="Expence_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_bug.png"  />                   
                    <Separator Template="{StaticResource VsMenuSep}" />
                    <MenuItem Header="_Product Attribute" Template="{StaticResource VsMenuSub}">
                        <MenuItem Header="_Category" Name="Category" Click="Category_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_SubCategory" Name="SubCategory" Click="SubCategory_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_Group" Name="Group" Click="Group_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />
                        <MenuItem Header="_Product Definition" Name="Product" Click="Product_Click" Template="{StaticResource VsMenuSub}" Icon="Assets\icons\icon_epic.png" />

